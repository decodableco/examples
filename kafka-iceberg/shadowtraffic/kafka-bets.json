{
    "generators": [
        {
            "topic": "games",
            "fork": {
                "key": {
                    "_gen": "sequentialString",
                    "expr": "game-~d"
                },
                "stagger": {
                    "ms": {
                        "_gen": "normalDistribution",
                        "mean": 2000,
                        "sd": 500
                    }
                }
            },
            "key": { "_gen": "var", "var": "forkKey" },
            "value": {
                "timestamp": {
                    "_gen": "now"
                }
            },
            "stateMachine": {
                "_gen": "stateMachine",
                "initial": "schedule",
                "transitions": {
                    "schedule": "start",
                    "start": "end"
                },
                "states": {
                    "schedule": {
                        "value": {
                            "status": "scheduled"
                        }
                    },
                    "start": {
                        "value": {
                            "status": "started"
                        }
                    },
                    "end": {
                        "value": {
                            "status": "ended"
                        }
                    }
                }
            },
            "localConfigs": {
                "throttle": {
                    "ms": {
                        "_gen": "uniformDistribution",
                        "bounds": [500, 5000]
                    }
                }
            }
        },
        {
            "topic": "bets",
            "value": {
                "gameId": {
                    "_gen": "lookup",
                    "topic": "games",
                    "path": ["key"]
                },
                "betType": {
                    "_gen": "oneOf",
                    "choices": ["win", "lose", "tie"]
                },
                "betAmount": {
                    "_gen": "normalDistribution",
                    "mean": 200,
                    "sd": 20
                },
                "timestamp": {
                    "_gen": "now"
                }
            },
            "localConfigs": {
                "throttle": {
                    "ms": {
                        "_gen": "uniformDistribution",
                        "bounds": [200, 600]
                    }

                }
            }
        }
    ],
    "connections": {
        "dev-kafka": {
            "kind": "kafka",
            "producerConfigs": {
                "bootstrap.servers": "broker:29092",
                "key.serializer": "io.shadowtraffic.kafka.serdes.JsonSerializer",
                "value.serializer": "io.shadowtraffic.kafka.serdes.JsonSerializer"
            }
        }
    }
}
