{
    "generators": [
        {
            "topic": "packets",
            "fork": {
                "key": {
                    "_gen": "string",
                    "expr": "#{Internet.ipV4Address}"
                },
                "maxForks": 50
            },
            "vars": {
                "octet": {
                    "_gen": "integer",
                    "n": {
                        "_gen": "uniformDistribution",
                        "bounds": [1, 14]
                    }
                }
            },
            "key": { "_gen": "uuid" },
            "value": {
                "sourceIP": { "_gen": "var", "var": "forkKey" },
                "destinationIP": {
                    "_gen": "string",
                    "expr": "52.4.0.0.#{octet}"
                },
                "timestamp": {
                    "_gen": "now"
                },
                "packetSizeBytes": {
                    "_gen": "integer",
                    "n": {
                        "_gen": "normalDistribution",
                        "mean": 200,
                        "sd": 4
                    }
                }
            },
            "localConfigs": {
                "throttle": {
                    "ms": {
                        "_gen": "uniformDistribution",
                        "bounds": [0, 20]
                    }
                }
            }
        }        
    ],
    "connections": {
        "dev-kafka": {
            "kind": "kafka",
            "topicPolicy": { "policy": "manual"},
            "producerConfigs": {
                "bootstrap.servers": "broker:29092",
                "key.serializer": "io.shadowtraffic.kafka.serdes.JsonSerializer",
                "value.serializer": "io.shadowtraffic.kafka.serdes.JsonSerializer"
            }
        }
    }
}
